<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Course</h1>
    <div class="col-6 offset-3">
        <form action="/courses" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-lable" for="title">Title: </label>
                <input
                        class="form-control"
                        type="text"
                        name="course[title]"
                        id="title"
                        placeholder="enter title.."
                        required
                />
                <div class="valid-feedback">Looks Alright!!</div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="instructor">Instructor:</label>
                <input
                        class="form-control"
                        type="text"
                        name="course[instructor]"
                        id="instructor"
                        placeholder="enter instructor.."
                        required
                />
                <div class="valid-feedback">Looks Alright!!</div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="url">Url:</label>
                <input
                        class="form-control"
                        type="text"
                        name="course[url]"
                        id="url"
                        placeholder="enter url.."
                        required
                />
                <div class="valid-feedback">Looks Alright!!</div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="course[image]" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="price">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input
                            type="text"
                            class="form-control"
                            placeholder="0.00"
                            name="course[price]"
                            aria-label="price"
                            aria-describedby="price-label"
                            required
                    />
                </div>
                <div class="valid-feedback">Looks Alright!!</div>
            </div>

            <div class="mb-3">
                <label class="form-lable" for="description">Description:</label>
                <textarea
                        class="form-control"
                        type="text"
                        name="course[description]"
                        id="description"
                        placeholder="enter description.."
                        required
                ></textarea>
                <div class="valid-feedback">Looks Alright!!</div>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add course</button>
            </div>
        </form>

        <button class="btn btn-dark" onclick="location.href='/courses'">
            Go Back to All courses
        </button>
    </div>
</div>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll(".validated-form");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
